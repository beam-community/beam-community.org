---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center mb-12">
  <h2 class="text-3xl font-bold text-slate-900 dark:text-white sm:text-4xl">{title}</h2>
  {subtitle && <p class="mt-4 text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">{subtitle}</p>}
</div>
