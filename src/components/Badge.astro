---
interface Props {
  text: string;
  variant?: "language" | "topic";
}

const { text, variant = "topic" } = Astro.props;

const classes =
  variant === "language"
    ? "bg-purple-100 dark:bg-purple-950/50 text-purple-800 dark:text-purple-300"
    : "bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300";
---

<span class:list={["inline-block px-2.5 py-0.5 rounded-full text-xs font-medium", classes]}>
  {text}
</span>
